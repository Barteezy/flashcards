<%= link_to "New deck", "decks/new" %>
<% @decks.each do |deck| %>
    <div>
      <%= link_to deck.name, "/deck/#{deck.id}" %>
      <%= link_to "Edit", "/decks/#{deck.id}/edit" %>
      <%= link_to "Delete", "/decks/#{deck.id}", method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
<% end %>
